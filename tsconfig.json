{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ], // Add ES2015 for Promise // Ensure Jest types are included
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "jest.config.js",
    "**/*.test.ts",
    "**/tailwind.config.js",
    "**/prisma/seed.js",
    "**/jest.config.js",
    "**/postcss.config.cjs"
  ]
}