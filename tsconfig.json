{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "jest.config.js",
    "**/*.test.ts",
    "**/tailwind.config.js",
    "**/prisma/seed.js",
    "**/jest.config.js"
  ]
}