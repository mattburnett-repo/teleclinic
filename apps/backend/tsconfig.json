{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "node",
      "express",
      "cors"
    ]
  },
  "include": [
    "**/*",
    "src/**/*"
  ],
  "exclude": [
    "jest.config.js",
    "**/*.test.ts",
    "**/tailwind.config.js",
    "**/prisma/seed.js",
    "**/jest.config.js",
    "**/postcss.config.js",
    "dist"
  ]
}